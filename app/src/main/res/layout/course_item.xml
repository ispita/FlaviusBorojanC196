<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/course_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"

    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/course_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/text_view_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toStartOf="@id/text_view_ID"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_course_title"
            android:text="Description"/>
        <TextView
            android:id="@+id/text_course_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_description"
            android:text="Start Date"/>
        <TextView
            android:id="@+id/text_course_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course_start_date"
            android:text="End Date"/>
        <TextView
            android:id="@+id/text_course_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course_end_date"
            android:text="Status"/>
        <TextView
            android:id="@+id/text_course_mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course_status"
            android:text="Mentor"/>
        <TextView
            android:id="@+id/text_course_mentor_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course_mentor"
            android:text="Mentor Phone"/>
        <TextView
            android:id="@+id/text_course_mentor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course_mentor_phone"
            android:text="Mentor Email"/>
        <TextView
            android:id="@+id/text_course_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_course_mentor_email"
            android:text="Notes"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>